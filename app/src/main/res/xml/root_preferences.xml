<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/account">
        <Preference
            android:key="Login"
            android:summary="@string/UID_default"
            android:title="@string/Login" />

        <Preference
            android:key="UID"
            android:summary="UID : UNKNOWN"
            android:icon="@drawable/ic_info_outline_black_24dp" />

    </PreferenceCategory>

    <PreferenceCategory app:title="service">

        <SwitchPreference
            android:defaultValue="false"
            android:enabled="false"
            android:key="serviceToggle"
            android:title="service on/off" />

        <ListPreference
            android:defaultValue="not selected"
            android:entries="@array/services"
            android:entryValues="@array/services"
            android:key="service"
            android:title="Select service"
            android:summary="Now : reception"/>

        <Preference
            android:key="blacklist"
            android:summary="select apps that you won't send notification"
            android:title="Edit blacklist" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="others">
        <Preference
            android:key="AppInfo"
            android:summary="@string/App_info_des"
            android:title="@string/App_info" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="debugInfo"
            android:title="Show Debug Logs"
            android:visibility="gone"
            tools:visibility="gone" />
    </PreferenceCategory>

</PreferenceScreen>
