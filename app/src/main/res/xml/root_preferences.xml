<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/account">
        <Preference
            android:key="Login"
            android:summary="@string/UID_default"
            android:title="@string/Login" />

        <Preference
            android:key="UID"
            android:summary="UID : UNKNOWN"
            android:icon="@drawable/ic_info_outline_black_24dp" />

    </PreferenceCategory>

    <PreferenceCategory app:title="reception">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="reception"
            android:title="@string/receptionSwitch" />
    </PreferenceCategory>

    <PreferenceCategory app:title="send">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="send"
            android:title="@string/sendSwitch" />
        <Preference
            android:key="blacklist"
            android:summary="@string/blacklist_des"
            android:title="@string/blacklist" />
    </PreferenceCategory>

    <PreferenceCategory android:title="others">
        <Preference
            android:key="AppInfo"
            android:summary="@string/App_info_des"
            android:title="@string/App_info" />
    </PreferenceCategory>

</PreferenceScreen>
